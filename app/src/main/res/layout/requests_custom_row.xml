<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="52dp"
                android:layout_height="86dp"
                android:src="@drawable/request_doctor"
                app:civ_circle_background_color="@color/white" />

            <TextView
                android:id="@+id/txtSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/imgNotification"
                android:paddingTop="12dp"
                android:text="hee"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtnotifBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSenderName"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/imgNotification"
                android:paddingStart="4dp"
                android:text="@string/notification_body" />

            <TextView
                android:id="@+id/txtPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtnotifBody"
                android:layout_toEndOf="@+id/imgNotification"
                android:paddingStart="12dp"
                android:text="person name"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPersonName"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:text="reject"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_reject" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAcceptRequestActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/teal_700"
                    android:text="accept"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_accept" />

            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>