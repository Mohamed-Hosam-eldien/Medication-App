<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="0dp"
        android:padding="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/addMedEtMedName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Medication Name"
                    android:paddingStart="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card1"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/addMedRemindTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Reminder Times"
                        android:paddingStart="5dp" />

                    <Switch
                        android:id="@+id/addMedReminderSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true" />

                    <Spinner
                        android:id="@+id/addMedReminderTimeSp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addMedRemindTv"
                        android:layout_marginTop="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/addMedReminderRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addMedReminderTimeSp"
                        android:layout_marginTop="15dp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card2"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/addMedTxtSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule" />

                    <TextView
                        android:id="@+id/addMedScheduleStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addMedTxtSchedule"
                        android:layout_marginTop="15dp"
                        android:text="Start date : " />

                    <TextView
                        android:id="@+id/hint1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addMedScheduleStartDate"
                        android:text="Medications Will not be created in the past"

                        />

                    <TextView
                        android:id="@+id/addMedTextRg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hint1"
                        android:layout_marginTop="15dp"
                        android:text="Duration" />

                    <RadioGroup
                        android:id="@+id/addMedGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addMedTextRg1"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/addMedRBtnOngoing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing treatment" />

                        <RadioButton
                            android:id="@+id/addMedRBtnNoDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing treatment" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/addMedTextRg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addMedGroup1"
                        android:layout_marginTop="15dp"
                        android:text="Days" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addMedTextRg2"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"

                        >

                        <RadioButton
                            android:id="@+id/addMedRBtnEveryDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Every day"

                            />

                        <RadioButton
                            android:id="@+id/addMedRBtnSpecificDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specific days of the week" />
                    </RadioGroup>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card3"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/medIconTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Med Icon" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/addMedRvMedIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/medIconTxt"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card4"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/addMedTVStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Medication strength : "

                        />
                    <EditText
                        android:id="@+id/addMedEtStrength"
                        android:layout_toEndOf="@+id/addMedTVStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Amout"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card5"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/addMedTVInstr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="Should this be taken with food ?" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/addMedTVInstr"
                        android:id="@+id/addMedRad2"
                        >

                        <RadioButton
                            android:id="@+id/addMedInstrRaBtnBefore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Before eating" />

                        <RadioButton
                            android:id="@+id/addMedInstrRaBtnWhile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="While eating" />

                        <RadioButton
                            android:id="@+id/addMedInstrRaBtnAfter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="After eating" />

                        <RadioButton
                            android:id="@+id/addMedInstrRaBtnDoesnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doesn't matter" />
                    </RadioGroup>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:id="@+id/addMedInstrTVOtherInstr"
                        android:hint="Any other instructions ?"
                        android:layout_below="@+id/addMedRad2"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card6"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/addMedPres1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prescription Refill" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addMedPres1"
                        android:id="@+id/addMedPres2"
                        android:text="Enter the amount of meds you currently have to get a refill reminder"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount of meds"
                        android:layout_below="@+id/addMedPres2"
                        android:id="@+id/addMedPres3"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/addMedPresAmountOfMedEt"
                        android:layout_below="@+id/addMedPres3"
                        android:layout_marginTop="10dp"
                        />




                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </ScrollView>
<androidx.appcompat.widget.Toolbar
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/addToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500"
    app:title="Add Medication"
    />

</androidx.constraintlayout.widget.ConstraintLayout>